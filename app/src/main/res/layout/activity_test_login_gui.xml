<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GUI.LoginGUI">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#131d38" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">
        <RelativeLayout
                android:id="@+id/TopLogin"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center">


            <ImageView
                    android:id="@+id/ivUsername"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/userlogo"
                    android:paddingBottom="5dp" android:layout_alignParentStart="true"
                    android:layout_marginTop="-13dp">

            </ImageView>
            <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Username"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/ivUsername"
                    android:paddingBottom="10dp">

            </TextView>

            <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="275dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"

                    app:hintEnabled="false"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeColor="#FFFFFF"
                    app:backgroundTint="#FFFFFF"

                    android:layout_marginTop="-5dp"

                    android:textSize="20dp" android:textColorHint="#FFFFFF">

            </EditText>

            <ImageView
                    android:id="@+id/ivPassword"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tvUsername"
                    android:src="@drawable/userlogo"
                    android:paddingBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="-13dp">

            </ImageView>

            <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/ivPassword"
                    android:paddingTop="5dp"
                    android:text="Password"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/tvUsername">

            </TextView>

            <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="275dp"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    app:hintEnabled="false"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeColor="#FFFFFF"
                    app:backgroundTint="#FFFFFF"
                    android:layout_below="@id/etUsername" android:textColorHint="#FFFFFF">

            </EditText>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/BottomLogin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/TopLogin"
                android:gravity="center">

            <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Login"
                    android:layout_marginRight="5dp">

            </Button>

            <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/btnLogin"
                    android:text="Register"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="12dp">
            </Button>

        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>